#
# Settings
#

# Kill startup message
startup_message off
	
# Switch visuell bell off
vbell off

# Set encoding to uft-8
defutf8 on

# Detach on hangup
autodetach on
	
# Define a bigger scrollback, default is 100 lines
defscrollback 5000
	
# Set shell
shell /usr/bin/zsh

# Termcap stuff
termcapinfo xterm ti@:te@
	

#
# Keybindings
#

# Use F7 and F8 to cycle trough the windows
bindkey -k k7 prev
bindkey -k k8 next

# Use F1 to detach
bindkey -k k1 detach

# F2 creates new window
bindkey -k k2 screen

# C-a R creates new root window
bind R screen -t '% |root:' sudo su



# 
# Statusline
#

# An alternative hardstatus to display a bar at the bottom listing the
# windownames and highlighting the current window in red. (This is only
# enabled if there is no hardstatus setting for your terminal)
# On the left side there are the hostname, date and time printed.
hardstatus on
hardstatus alwayslastline
hardstatus string "%{.bW}%-w%{.rW}%n %t%{-}%+w %=%{..G} %H %{..Y} %d.%m.%y %c:%s "

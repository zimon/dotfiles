zstyle ':completion:*' match-original both
zstyle ':completion:*' matcher-list '' 'r:|[_]=* r:|=*' 'm:{a-zA-Z}={A-Za-z} r:|[_]=* r:|=*'
#zstyle ':completion:*' matcher-list '+m:{[:lower:][:upper:]}={[:upper:][:lower:]}' '+m:{[:lower:][:upper:]}={[:upper:][:lower:]} r:|[._-]=* r:|=*' '+m:{[:lower:][:upper:]}={[:upper:][:lower:]} r:|[._-]=** r:|=**' '+m:{[:lower:][:upper:]}={[:upper:][:lower:]} r:|[._-]=** r:|=** l:|=*'
